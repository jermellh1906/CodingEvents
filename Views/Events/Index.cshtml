<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
<p>
    <a asp-controller="Events" asp-action="Delete">Delete Events</a>
</p>

@if (ViewBag.events.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Edit</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evt in ViewBag.events)
            {
            <tr>
                <td>@evt.Id</td>
                <td><a asp-controller="Events" asp-action="Edit" asp-route-eventId="@evt.Id">Edit Event</a></td>
                <td>@evt.Name</td>
                <td>@evt.Description</td>
            </tr>
            }
        </tbody>
    </table>
}









