<h1>Edit Event</h1>

<form method="post" action="/events/edit">
    <div class="form-group">
        <label>Name: <input name="name" value="@ViewBag.eventToEdit.Name" type="text" /></label>
    </div>
    <div class="form-group">
        <label>Description: <input name="description" value="@ViewBag.eventToEdit.Description" type="text" /></label>
    </div>
    <input type="submit" class="btn btn-primary" value="Edit Event" />
    <input type="hidden" value="@ViewBag.eventToEdit.Id" name="eventId" />
</form>
